{% extends 'user-template.html.twig' %}

{% block title %}Informations de la user.personne{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('assets/css/show-information.css')}}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css"rel="stylesheet"/>
  
{% endblock %}
{% block showprofile %}
    <a class="dropdown-item" href="{{path('user_show',{id: user.id})}}">Mon Profil</a>
{% endblock %}
{% block editprofile %}
    <a class="dropdown-item" href="{{path('user_edit',{id: user.id})}}">Modifier son compte</a>
{% endblock %}
{% block editprofile2 %}
  <li><a href="{{path('user_edit',{id: user.id})}}"><span>Créer compte agent</span></a></li>
{% endblock %}
{% block notifpro %}
    <img alt="John Doe" src="{{ asset('uploads/image_personne/' ~ user.personne.image)}}" class="img-fluid rounded-circle">
{% endblock %}
{% block photoprofile %}
    <img class="rounded-circle" src="{{ asset('uploads/image_personne/' ~ user.personne.image)}}" width="30" alt="Admin">
{% endblock %}
{% block main %}
    <div class="page-header">
    <div class="row">
    <div class="col-md-6">
    <h3 class="page-title text-lowercase mb-0">Informations sur l'utilisateur</h3>
    </div>
    <div class="col-md-6">
    {# <a href="{{path('user_list')}}" class="float-right text-muted"><i class="fa-solid fa-arrow-left"></i> Retour</a> #}
    </div>
    </div>
    </div>
    <div class="bg-light">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-10 pt-5">
                    <div class="row z-depth-3">
                        <div class="col-sm-4 rounded-left profile-left">
                            <div class="card-block text-center text-white">
                                {# <i class="fas fa-user-tie fa-7x mt-5"></i> #}
                                <img src="{{ asset('uploads/image_personne/' ~ user.personne.image)}}" class="mt-5" style="width: 12em; height: 12em; margin-top: 5em;border-radius:50%;" alt="image de profile">
                                <h3 class="font-weight-bold mt-4">{{user.matricule}}</h3>
                                <p>{{user.personne.matricule}}</p>
                                <a href="{{path('personne.edit',{id: user.getPersonne().id})}}"><i class="fas fa-edit fa-2x mb-4 text-light"></i></a>
                            </div>
                        </div>
                        <div class="col-sm-8 bg-white rounded-right">
                            <h3 class="mt-3 text-center h3">Informations</h3>
                            <hr class="ligne mt-0 w-25">
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Nom</p>
                                    <h6 class="text-muted">{{user.personne.nom}}</h6>
                                </div>
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Prenom</p>
                                    <h6 class="text-muted">{{user.personne.prenom}}</h6>
                                </div>
                            </div>
                            <hr class="ligne">
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Tél</p>
                                    <h6 class="text-muted">{{user.personne.telephone}}</h6>
                                </div>
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Sexe</p>
                                    <h6 class="text-muted">{{user.personne.sexe}}</h6>
                                </div>
                            </div>
                            <hr class="ligne">
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Date de naissance</p>
                                    <h6 class="text-muted">{{user.personne.datenaiss|date('d-m-Y')}}</h6>
                                </div>
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Lieu de naissance</p>
                                    <h6 class="text-muted">{{user.personne.lieunaiss}}</h6>
                                </div>
                            </div>
                            <hr class="ligne">
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Fonction</p>
                                    <h6 class="text-muted">{{user.personne.fonction.designation}}</h6>
                                </div>
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">service</p>
                                    <h6 class="text-muted">{{user.personne.service.designation}}</h6>
                                </div>
                            </div>
                            <hr class="ligne">
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Direction</p>
                                    <h6 class="text-muted">{{user.personne.direction.designation}}</h6>
                                </div>
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Sous direction</p>
                                    <h6 class="text-muted">{{user.personne.sousdirection.designation}}</h6>
                                </div>
                            </div>
                            <hr class="ligne">
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}