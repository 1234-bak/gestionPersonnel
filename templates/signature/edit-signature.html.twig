{% extends 'liste-template.html.twig' %}

{% block stylesheets %}
    
    <link rel="stylesheet" href="{{asset('assets/css/datatables/tables-style.css')}}">
    <link rel="stylesheet" href="{{asset('assets/css/edit-agent.css')}}">
    <style>
    .action .btn:hover{
    background-color: orange;
    color: white;
    }

    .lien:hover{
        background: var(--green);
    }

    #btnAction{
        background-color: var(--orange);
        color: white;
    }

    #btnAction:hover{
        background-color: orange;
        color: white;
    }

    .fa-trash , .fa-user-pen, .fa-circle-info{
        color: orange;
    }
    .modal {
        display: flex;
        align-items: center;
        justify-content:center;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.5);
    }
    .modal-content {
        position: absolute;
        top: 10px;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        left: 50%; 
        transform: translateX(-50%);
        max-width: 800px; /* Limite la largeur maximale du modal */
        max-height: 2000px;
    }

    </style>
{% endblock %}
{% block editprofile %}
    <a class="dropdown-item" href="{{path('user_edit',{id: user.id})}}">Edit Profile</a>
{% endblock %}
{% block showprofile %}
    <a class="dropdown-item" href="{{path('user_show',{id: user.id})}}">Edit Profile</a>
{% endblock %}
{% block notifpro %}
    <img alt="John Doe" src="{{ asset('uploads/image_personne/' ~ user.personne.image)}}" class="img-fluid rounded-circle">
{% endblock %}
{% block photoprofile %}
    <img class="rounded-circle" src="{{ asset('uploads/image_personne/' ~ user.personne.image)}}" width="30" alt="Admin">
{% endblock %}
{% block main %}
    <div id="modal" class="modal">
        <div class="modal-content">
            <a href="{{path('personne.liste')}}"><span id="modal-close" class="modal-close">&times;</span></a>
            <h3 class="font-weight-bold text-center">Ajout d'une nouvelle signature</h3>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="search">
                    {# <i class="fa fa-envelope"></i> #}
                    {{ form_row(form.photo,{
                    'attr':{
                        'class': 'input'
                    }
                }) }}
            </div>
            {{ form_row(form.editer, {'attr': {'class': 'orange-button'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
      $(document).ready(function() {
        $('.dropdown-toggle').dropdown();
        
      });
    </script>
    <script>
        $(document).ready(function() {
          $('.select2').select2();
        });
    </script>
    <script src="{{ asset('assets/js/datatables/init.js') }}"></script>
    <script src="{{asset('assets/js/modal.js')}}"></script>
    
   
{% endblock %}
