.modal {
    display: flex;
    align-items: center;
    justify-content:center;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.5);
}
.modal-content {
    position: absolute;
    top: 10px;
    background-color: #fff;
    padding: 20px;
    border-radius: 5px;
    left: 50%; 
    transform: translateX(-50%);
    max-width: 800px; /* Limite la largeur maximale du modal */
    max-height: 2000px;
}

